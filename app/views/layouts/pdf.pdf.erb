<!doctype html>
<html>
  <head>
    <meta charset='utf-8' />
    <title><%= @survey.title %></title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 40px;
      }
      .header {
        text-align: center;
        margin-bottom: 30px;
      }
      .title {
        font-size: 24px;
        color: #111827;
        margin-bottom: 10px;
      }
      .subtitle {
        font-size: 14px;
        color: #6B7280;
      }
      .section {
        margin-bottom: 30px;
      }
      .category-title {
        font-size: 20px;
        color: #111827;
        border-bottom: 2px solid #E5E7EB;
        padding-bottom: 5px;
        margin-bottom: 20px;
      }
      .value-card {
        border: 1px solid #E5E7EB;
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 20px;
      }
      .value-title {
        font-size: 16px;
        color: #374151;
        margin-bottom: 10px;
      }
      .value-description {
        color: #6B7280;
        margin-bottom: 15px;
      }
      .stats {
        background-color: #F9FAFB;
        padding: 15px;
        border-radius: 6px;
      }
      .stat-item {
        margin-bottom: 8px;
      }
      .footer {
        text-align: center;
        margin-top: 50px;
        padding-top: 20px;
        border-top: 1px solid #E5E7EB;
        color: #9CA3AF;
        font-size: 12px;
      }
    </style>
  </head>
  <body onload="window.status='ready'">
  <body>
    <%= yield %>
  </body>
</html>
