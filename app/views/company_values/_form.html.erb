# app/views/admin/company_values/_form.html.erb
<%= form_with(model: [:admin, company_value], local: true, class: "space-y-8 divide-y divide-gray-200") do |f| %>
  <div class="space-y-8 divide-y divide-gray-200">
    <div>
      <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
        <div class="sm:col-span-4">
          <%= f.label :value_category_id, "Catégorie", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.collection_select :value_category_id,
                ValueCategory.all,
                :id,
                :name,
                { prompt: "Sélectionnez une catégorie" },
                class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
          </div>
        </div>

        <div class="sm:col-span-4">
          <%= f.label :name, "Nom", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.text_field :name, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
          </div>
        </div>

        <div class="sm:col-span-6">
          <%= f.label :description, "Description", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.text_area :description, rows: 3, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border border-gray-300 rounded-md" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="pt-5">
    <div class="flex justify-end">
      <%= link_to 'Annuler', admin_company_values_path, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50" %>
      <%= f.submit class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
    </div>
  </div>
<% end %>
