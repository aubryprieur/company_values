<div class="space-y-4">
  <% question.qvt_choices.each do |choice| %>
    <div class="flex items-center">
      <input type="checkbox"
             name="responses[<%= question.id %>][choice_ids][]"
             id="choice_<%= choice.id %>"
             value="<%= choice.id %>"
             <%= 'checked' if response&.qvt_choices&.include?(choice) %>
             class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded"
             <%= 'required' if question.required? %>>
      <label for="choice_<%= choice.id %>" class="ml-3 block text-sm font-medium text-gray-700">
        <%= choice.content %>
      </label>
    </div>
  <% end %>
</div>
