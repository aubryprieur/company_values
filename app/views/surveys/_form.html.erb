<%= form_with(model: survey, class: "space-y-8 divide-y divide-gray-200") do |f| %>
  <div class="space-y-8 divide-y divide-gray-200">
    <div>
      <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
        <div class="sm:col-span-4">
          <%= f.label :title, "Titre", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.text_field :title, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
          </div>
          <% if survey.errors[:title].any? %>
            <p class="mt-2 text-sm text-red-600"><%= survey.errors[:title].join(', ') %></p>
          <% end %>
        </div>

        <div class="sm:col-span-3">
          <%= f.label :end_date, "Date de fin", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.datetime_field :end_date, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
          </div>
          <% if survey.errors[:end_date].any? %>
            <p class="mt-2 text-sm text-red-600"><%= survey.errors[:end_date].join(', ') %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="pt-5">
    <div class="flex justify-end">
      <%= link_to 'Annuler', surveys_path, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50" %>
      <%= f.submit class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
    </div>
  </div>
<% end %>
