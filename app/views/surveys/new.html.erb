<div class="max-w-3xl mx-auto">
  <div class="md:flex md:items-center md:justify-between mb-8">
    <div class="min-w-0 flex-1">
      <h2 class="text-2xl font-bold text-gray-900">
        Nouveau Sondage <%= params[:type] == 'qvt' ? 'QVT' : 'Valeurs' %>
      </h2>
    </div>
  </div>

  <%= form_with(model: @survey, local: true, class: "space-y-8") do |f| %>
    <%= f.hidden_field :survey_type %>

    <div class="space-y-8 bg-white shadow rounded-lg p-6">
      <div>
        <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
          <div class="sm:col-span-4">
            <%= f.label :title, "Titre", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= f.text_field :title, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
            </div>
          </div>

          <div class="sm:col-span-3">
            <%= f.label :end_date, "Date de fin", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= f.datetime_field :end_date, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
            </div>
          </div>
        </div>
      </div>

      <div class="pt-5">
        <div class="flex justify-end space-x-3">
          <%= link_to 'Annuler', surveys_path, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50" %>
          <%= f.submit "CrÃ©er le sondage", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
